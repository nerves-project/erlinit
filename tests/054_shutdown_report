#!/usr/bin/env bash

#
# Test that saving a shutdown report works.
#
# Note: This only tests that the code runs and not that the report looks ok.
#

cat >"$CMDLINE_FILE" <<EOF
-v --shutdown-report /shutdown.txt
EOF

cat >$WORK/dev/kmsg <<EOF
